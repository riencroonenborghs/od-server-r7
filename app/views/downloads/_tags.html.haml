- if download.is_a? WgetDownload
  - if download.filter
    %span.ms-2.fs-11.badge.rounded-pill.bg-primary.text-light=download.filter
  - if download.http_auth?
    %span.ms-2.fs-11.badge.rounded-pill.bg-secondary.text-light HTTP Auth
- elsif download.is_a? YoutubeAudioDownload
  %span.ms-2.fs-11.badge.rounded-pill.bg-info.text-light=download.youtube_audio_format
- elsif download.is_a? YoutubeVideoDownload
  - if download.youtube_subs
    %span.ms-2.fs-11.badge.rounded-pill.bg-success.text-light Subs
  - if download.youtube_srt_subs
    %span.ms-2.fs-11.badge.rounded-pill.bg-warning.text-light SRT Subs